@model IEnumerable<HotelBooking.Models.Room>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "New","",new { @class= "btn btn-primary mt-4" })
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelBrunch.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookStatus.Name)
        </th>
        @*<th></th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            <img src="~/Uploads/@item.Image" style="width:100px;height:100px" class="img-thumbnail"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelBrunch.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookStatus.Name)
        </td>
        <!--<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |-->
            @*<button class="btn btn-success" id="@item.Id">Edit</button>*@
            <!--@Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>-->
    </tr>
}

</table>
